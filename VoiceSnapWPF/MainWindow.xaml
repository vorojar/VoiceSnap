<Window x:Class="VoiceSnap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:props="clr-namespace:VoiceSnap.Properties"
        Title="{x:Static props:Resources.AppName}" 
        Height="520" Width="780"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Closing="Window_Closing"
        FontFamily="Segoe UI, Microsoft YaHei"
        FocusVisualStyle="{x:Null}"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        Visibility="Hidden">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      GlassFrameThickness="0" 
                      CornerRadius="0" 
                      ResizeBorderThickness="4"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- macOS Style Toggle Switch -->
        <Style x:Key="MacOSToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <BulletDecorator Background="Transparent" Cursor="Hand">
                            <BulletDecorator.Bullet>
                                <Grid Width="36" Height="20">
                                    <Border x:Name="BackgroundBorder" Background="#D1D1D6" CornerRadius="10" />
                                    <Ellipse x:Name="Thumb" Fill="White" Width="16" Height="16" HorizontalAlignment="Left" Margin="2,0,0,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                </Grid>
                            </BulletDecorator.Bullet>
                            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </BulletDecorator>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="#34C759"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" Background="Transparent" CornerRadius="8" Margin="10,2" Padding="12,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Icon" Text="{TemplateBinding Tag}" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E5E5EA"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007AFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="GroupName" Value="Sidebar"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#1C1C1E"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- Card Style (Inside Module) -->
        <Style x:Key="SettingsCard" TargetType="Border">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#8E8E93"/>
            <Setter Property="Margin" Value="4,0,0,8"/>
        </Style>

        <!-- Window Control Button Style -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#454552"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E5E5EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#454552"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#F8F9FA" CornerRadius="16" BorderBrush="#D1D1D6" BorderThickness="1" Margin="15" RenderOptions.ClearTypeHint="Enabled">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Area (Unified with Title) -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/> <!-- Logo/Title Area -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,0,0">
                    <Border Width="24" Height="24" Background="#007AFF" CornerRadius="6" Margin="0,0,10,0">
                        <TextBlock Text="V" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="VoiceSnap" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Foreground="#1C1C1E"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <RadioButton Content="{x:Static props:Resources.NavGeneral}" Tag="⚙️" Style="{StaticResource SidebarButton}" IsChecked="True" x:Name="NavGeneral" Click="Nav_Click"/>
                    <RadioButton Content="{x:Static props:Resources.NavHotkeys}" Tag="⌨️" Style="{StaticResource SidebarButton}" x:Name="NavHotkeys" Click="Nav_Click"/>
                    <RadioButton Content="{x:Static props:Resources.NavAbout}" Tag="ℹ️" Style="{StaticResource SidebarButton}" x:Name="NavAbout" Click="Nav_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="20,0,0,25" Orientation="Horizontal">
                    <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#FF3B30" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusLabel" Text="未就绪" FontSize="11" Foreground="#8E8E93" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Right Content Module -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/> <!-- Custom Title Bar -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Window Controls (Right Top) -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,12,0" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Style="{StaticResource CloseButton}" Click="CloseWindow_Click"/>
                </StackPanel>

                <!-- The White Module (Floating Card) -->
                <Border Grid.Row="1" Background="White" CornerRadius="20" Margin="0,0,12,12" Padding="30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.03"/>
                    </Border.Effect>
                    <Grid>
                        <!-- General Page -->
                        <StackPanel x:Name="PageGeneral" Visibility="Visible">
                            <TextBlock Text="{x:Static props:Resources.PageTitleGeneral}" FontSize="24" FontWeight="Bold" Margin="0,0,0,24" Foreground="#1C1C1E"/>

                            <TextBlock Text="{x:Static props:Resources.SectionBehavior}" Style="{StaticResource SectionHeader}"/>
                            <Border Style="{StaticResource SettingsCard}">
                                <StackPanel>
                                    <CheckBox x:Name="AutoHideCheckbox"
                                              Content="{x:Static props:Resources.AutoHideIndicator}"
                                              IsChecked="True"
                                              Style="{StaticResource MacOSToggleSwitch}"
                                              Checked="AutoHideCheckbox_Changed"
                                              Unchecked="AutoHideCheckbox_Changed"/>
                                    <Separator Background="#EEEEEE" Margin="-16,12,-16,12"/>
                                    <CheckBox x:Name="StartupCheckbox"
                                              Content="{x:Static props:Resources.StartWithSystem}"
                                              IsChecked="False"
                                              Style="{StaticResource MacOSToggleSwitch}"
                                              Checked="StartupCheckbox_Changed"
                                              Unchecked="StartupCheckbox_Changed"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="{x:Static props:Resources.SectionAudio}" Style="{StaticResource SectionHeader}"/>
                            <Border Style="{StaticResource SettingsCard}">
                                <TextBlock x:Name="DeviceLabel" Text="{x:Static props:Resources.DetectingDevice}" FontSize="13" Foreground="#1C1C1E"/>
                            </Border>
                        </StackPanel>

                        <!-- Hotkeys Page -->
                        <StackPanel x:Name="PageHotkeys" Visibility="Collapsed">
                            <TextBlock Text="{x:Static props:Resources.PageTitleHotkeys}" FontSize="24" FontWeight="Bold" Margin="0,0,0,24" Foreground="#1C1C1E"/>

                            <TextBlock Text="{x:Static props:Resources.SectionRecordControl}" Style="{StaticResource SectionHeader}"/>
                            <Border Style="{StaticResource SettingsCard}">
                                <Grid>
                                    <TextBlock Text="{x:Static props:Resources.LongPressTrigger}" VerticalAlignment="Center" FontSize="13"/>
                                    <Button x:Name="HotkeyButton" Click="HotkeyButton_Click" HorizontalAlignment="Right" Cursor="Hand" FocusVisualStyle="{x:Null}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="#EBEBF0" CornerRadius="6" Padding="12,6">
                                                    <TextBlock x:Name="BtnText" Text="{Binding ElementName=HotkeyLabel, Path=Text}" FontWeight="Bold" Foreground="#007AFF"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#D1D1D6"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBlock x:Name="HotkeyLabel" Text="Ctrl" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <TextBlock x:Name="HotkeyHint" Text="{x:Static props:Resources.HotkeyHint}"
                                       FontSize="11" Foreground="#8E8E93" TextWrapping="Wrap" Margin="4,0,0,0"/>
                        </StackPanel>

                        <!-- About Page -->
                        <StackPanel x:Name="PageAbout" Visibility="Collapsed">
                            <Border Width="70" Height="70" Background="#007AFF" CornerRadius="16" Margin="0,10,0,20" HorizontalAlignment="Center">
                                <TextBlock Text="V" Foreground="White" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{x:Static props:Resources.AppName}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1C1C1E"/>
                            <TextBlock x:Name="VersionLabel" Text="版本 1.3.2" FontSize="13" Foreground="#8E8E93" HorizontalAlignment="Center" Margin="0,4,0,24"/>

                            <Border Style="{StaticResource SettingsCard}">
                                <StackPanel>
                                    <TextBlock Text="{x:Static props:Resources.AboutDescription}"
                                               TextWrapping="Wrap" FontSize="13" LineHeight="20" Foreground="#1C1C1E"/>
                                    <Separator Background="#EEEEEE" Margin="-16,12,-16,12"/>
                                    <TextBlock Text="{x:Static props:Resources.AboutAuthor}" FontSize="11" Foreground="#8E8E93" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                        <TextBlock Text="{x:Static props:Resources.RunningMode}" FontSize="10" Foreground="#AEAEB2"/>
                                        <TextBlock x:Name="EngineModeLabel" Text="{x:Static props:Resources.Detecting}" FontSize="10" Foreground="#AEAEB2"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                        <Button Content="{x:Static props:Resources.VisitWebsite}"
                                                Click="GithubButton_Click"
                                                Cursor="Hand"
                                                FocusVisualStyle="{x:Null}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               Foreground="#007AFF"
                                                               FontSize="12"
                                                               TextDecorations="Underline"/>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <TextBlock Text=" · " Foreground="#8E8E93" FontSize="12" VerticalAlignment="Center"/>
                                        <Button Content="{x:Static props:Resources.CheckUpdate}"
                                                Click="CheckUpdateButton_Click"
                                                Cursor="Hand"
                                                FocusVisualStyle="{x:Null}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               Foreground="#007AFF"
                                                               FontSize="12"
                                                               TextDecorations="Underline"/>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                    <TextBlock x:Name="UpdateStatusLabel"
                                               Text=""
                                               FontSize="11"
                                               Foreground="#8E8E93"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,0"
                                               Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Initializing View (Onboarding) -->
                <Border x:Name="InitialView" Grid.Row="1" Background="White" CornerRadius="20" Margin="0,0,12,12" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border x:Name="OnboardingLogo" Width="60" Height="60" Background="#007AFF" CornerRadius="14" Margin="0,0,0,30">
                            <TextBlock Text="V" Foreground="White" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="InitStatusLabel" Text="{x:Static props:Resources.InitPreparing}" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#1C1C1E" Margin="0,0,0,20"/>
                        <Grid x:Name="InitProgressBarContainer" Width="240" Height="6">
                            <Border Background="#F2F2F7" CornerRadius="3"/>
                            <Border x:Name="InitProgressFill" Background="#007AFF" CornerRadius="3" HorizontalAlignment="Left" Width="0"/>
                        </Grid>
                        <TextBlock x:Name="InitDetailLabel" Text="0%" FontSize="12" Foreground="#8E8E93" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- System Tray Icon -->
            <tb:TaskbarIcon x:Name="TrayIcon"
                            ToolTipText="{x:Static props:Resources.AppName}"
                            DoubleClickCommand="{Binding ShowWindowCommand}"
                            TrayLeftMouseDown="TrayIcon_TrayLeftMouseDown"
                            Visibility="Visible">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{x:Static props:Resources.TrayShow}" Click="ShowWindow_Click"/>
                        <Separator/>
                        <MenuItem Header="{x:Static props:Resources.TrayExit}" Click="ExitApp_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </Grid>
    </Border>
</Window>
